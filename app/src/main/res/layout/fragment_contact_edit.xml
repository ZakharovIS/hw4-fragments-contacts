<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ContactDetailFragment"
    android:background="@color/white">


    <ImageView
        android:id="@+id/contact_photo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="50dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4"/>

    <TextView
        android:id="@+id/title_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/contact_photo"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Name:"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        />

    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintTop_toTopOf="@id/title_name"
        app:layout_constraintBottom_toBottomOf="@id/title_name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="IGOR"
        android:layout_marginStart="20dp"
        />

    <TextView
        android:id="@+id/title_surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/title_name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Surname:"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        />

    <EditText
        android:id="@+id/surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintTop_toTopOf="@id/title_surname"
        app:layout_constraintBottom_toBottomOf="@id/title_surname"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="ZAKHAROV"
        android:layout_marginStart="20dp"
        />

    <TextView
        android:id="@+id/title_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/title_surname"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Phone:"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        />

    <EditText
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintTop_toTopOf="@id/title_phone"
        app:layout_constraintBottom_toBottomOf="@id/title_phone"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="+7 123-45-67"
        android:layout_marginStart="20dp"
        />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title_phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="SAVE"/>


</androidx.constraintlayout.widget.ConstraintLayout>